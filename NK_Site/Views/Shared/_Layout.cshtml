<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <title>@ViewBag.Title - Nikita Kirav</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/css/shop-homepage.css" rel="stylesheet">
    <link href="~/ckeditor/plugins/codesnippet/lib/highlight/styles/vs.css" rel="stylesheet" />
    <script src="~/ckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js"></script>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/site.min.js"></script>
</head>
<body class="line-dark">
    <!-- Navigation -->
    <partial name="_TopMenu" />

    <partial name="_CookieConsentPartial" />

    <div class="line-darkbrown">
        @RenderBody()
    </div>
    <!-- Footer -->
    <footer class="py-5 bg-dark2">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; @DateTime.Now.Year - KiravRu</p>
        </div>
        <!-- /.container -->
    </footer>

    <script>hljs.initHighlightingOnLoad();</script>
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
