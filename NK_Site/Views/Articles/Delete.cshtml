<div class="modal-header">
    <h5 class="modal-title pull-left" id="exampleModalLabel">Modal title</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <p class="modal-dictionary">Are you sure you want to delete this article?</p>
</div>
<div class="modal-footer">
    <button id="yesButton" type="button" class="btn btn-primary" data-id="@Model.Id">Delete</button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Close</button>
</div>

<script>$("#yesButton").click(function () {
    $.ajax({
        url: "/Articles/Delete/",
        method: "post",
        data: {
            Id: $(this).attr("data-id")
        }
    }).done(function () {
        location.href = "/Articles/List";
    });
});</script>