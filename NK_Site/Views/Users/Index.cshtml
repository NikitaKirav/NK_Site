@model IEnumerable<NK_Site.Models.ApplicationUser>
@{
    ViewBag.Title = "List Of Users";
    Layout = "_AdminBoardLayout";
}
<h2>List's Users</h2>

<table class="table">
    <tr><th>Email</th><th>Name</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="access">
                    <a class="btn btn-sm btn-primary btn-admin" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary btn-admin" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="btn btn-success btn-admin" asp-action="Create">Add User</a>
