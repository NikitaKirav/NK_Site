@{
    Layout = "_AdminBoardLayout";
}

<div>
    <h2>Create Category</h2>

    <form id="createForm" method="post" action="/Categories/Create/">
        <div class="form-group">
            <label>
                Name
            </label>
            <input name="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label>
                OrderItem
            </label>
            <input name="OrderItem" class="form-control" />
        </div>

        @*<div class="form-group">
            <label>
                NestingLevel
            </label>
            <input name="NestingLevel" class="form-control" />
        </div>*@
        <div class="form-group">
            <label>
                NestingLevel
            </label>
            @Html.DropDownList("NestingLevelId", new SelectList(ViewBag.ListOfCategory, "Id", "Name"), "-root-", new { })
        </div>
            <div class="form-group">
                <label>
                    ImagePath
                </label>
                <input name="ImagePath" class="form-control" />
            </div>

            <div class="form-group">
                <label>
                    ImageText
                </label>
                <input name="ImageText" class="form-control" />
            </div>

            <div class="form-group">
                <label>
                    Description
                </label>
                <input name="Description" class="form-control" />
            </div>

            @*<div class="form-group">
                <label>
                    Visible
                </label>
                <input name="Visible" class="form-control" />
            </div>*@
            <div class="form-check">
                @Html.CheckBox("Visible", new { })
                <label class="form-check-label" for="defaultCheck1">
                    Visible
                </label>
            </div>


            <button class="btn btn-success" type="button" id="saveButton">
                Save
            </button>
    </form>
</div>

<script>
    $("#saveButton").click(function () {
        $.ajax({
            url: "/Categories/Create/",
            method: "post",
            data: $("#createForm").serialize()
        }).done(function () {
            location.href = "/Categories/List";
        });
    });
</script>